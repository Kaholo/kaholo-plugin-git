{
  "name": "Git",
  "viewName": "Git",
  "type": "executer",
  "execProgram": "node",
  "main": "app.js",
  "imgUrl": "logo.png",
  "version": "2.6.1",
  "description": "Git Distributed Version Control System",
  "category": "Source Control",
  "keywords": [
    "code",
    "dev",
    "developer",
    "repo",
    "repository",
    "package",
    "versioning",
    "cloud",
    "source",
    "control",
    "branch",
    "github",
    "push",
    "pull",
    "clone"
  ],
  "settings": [
    {
      "name": "sshKey",
      "viewName": "Default SSH Key",
      "type": "vault",
      "description": "This SSH key will be used if no SSH key is specified at the individual Action level.",
      "learnUrl": "https://docs.github.com/en/authentication/connecting-to-github-with-ssh/generating-a-new-ssh-key-and-adding-it-to-the-ssh-agent"
    }
  ],
  "methods": [
    {
      "name": "cloneUsingSsh",
      "viewName": "Clone Private Repository",
      "params": [
        {
          "name": "sshKey",
          "viewName": "SSH Key",
          "type": "vault",
          "required": false,
          "description": "SSH key to use for authentication, if not username and password",
          "learnUrl": "https://git-scm.com/book/en/v2/Git-on-the-Server-Generating-Your-SSH-Public-Key"
        },
        {
          "name": "username",
          "viewName": "Username",
          "type": "string",
          "required": false,
          "description": "Username for authentication if not by SSH key",
          "placeholder": "myusername"
        },
        {
          "name": "password",
          "viewName": "Password",
          "type": "vault",
          "required": false,
          "description": "Password or Token for authentication if not by SSH key"
        },
        {
          "name": "repo",
          "viewName": "Repository",
          "type": "string",
          "required": true,
          "description": "The repository URL, git or HTTPS format",
          "placeholder": "git@github.com:Kaholo/kaholo-plugin-git.git",
          "learnUrl": "https://git-scm.com/book/en/v2/Git-Basics-Working-with-Remotes"
        },
        {
          "name": "branch",
          "viewName": "Branch",
          "type": "string",
          "required": false,
          "description": "Specify a branch to checkout if not master/main",
          "placeholder": "develop",
          "learnUrl": "https://git-scm.com/book/en/v2/Git-Branching-Branches-in-a-Nutshell"
        },
        {
          "name": "path",
          "viewName": "Clone Path",
          "type": "string",
          "required": false,
          "description": "Directory to clone into, if not same as repo name",
          "placeholder": "myrepo_develop",
          "learnUrl": "https://git-scm.com/docs/git-clone"
        },
        {
          "name": "extraArgs",
          "viewName": "Additional Arguments",
          "type": "text",
          "required": false,
          "parserType": "array",
          "description": "Optional additional arguments for the git command",
          "placeholder": "--quiet",
          "learnUrl": "https://git-scm.com/docs/git-clone"
        },
        {
          "name": "overwrite",
          "viewName": "Overwrite If Exists",
          "type": "boolean",
          "default": true,
          "description": "If clone path already exists, enable to delete and reclone",
          "learnUrl": "https://git-scm.com/docs/git-clone"
        }
      ]
    },
    {
      "name": "clonePublic",
      "viewName": "Clone Public Repository",
      "params": [
        {
          "name": "repo",
          "viewName": "Repository",
          "type": "string",
          "required": true,
          "description": "The HTTPS format repository URL",
          "placeholder": "https://github.com/myuser/myrepo.git",
          "learnUrl": "https://git-scm.com/book/en/v2/Git-Basics-Working-with-Remotes"
        },
        {
          "name": "branch",
          "viewName": "Branch",
          "type": "string",
          "required": false,
          "description": "Specify a branch to checkout if not master/main",
          "placeholder": "develop",
          "learnUrl": "https://git-scm.com/book/en/v2/Git-Branching-Branches-in-a-Nutshell"
        },
        {
          "name": "path",
          "viewName": "Clone Path",
          "type": "string",
          "required": false,
          "description": "Directory to clone into, if not same as repo name",
          "placeholder": "myrepo_develop",
          "learnUrl": "https://git-scm.com/docs/git-clone"
        },
        {
          "name": "extraArgs",
          "viewName": "Additional Arguments",
          "type": "text",
          "required": false,
          "parserType": "array",
          "description": "Optional additional arguments for the git command",
          "placeholder": "--quiet",
          "learnUrl": "https://git-scm.com/docs/git-clone"
        },
        {
          "name": "overwrite",
          "viewName": "Overwrite If Exists",
          "type": "boolean",
          "default": true,
          "description": "If clone path already exists, enable to delete and reclone",
          "learnUrl": "https://git-scm.com/docs/git-clone"
        }
      ]
    },
    {
      "name": "pull",
      "viewName": "Pull",
      "params": [
        {
          "name": "sshKey",
          "viewName": "SSH Key",
          "type": "vault",
          "required": false,
          "description": "SSH key to use for authentication, if not username and password",
          "learnUrl": "https://git-scm.com/book/en/v2/Git-on-the-Server-Generating-Your-SSH-Public-Key"
        },
        {
          "name": "path",
          "viewName": "Repository Path",
          "type": "string",
          "required": true,
          "description": "Path of the existing git repository to \"git pull\"",
          "placeholder": "/home/username/reponame/",
          "learnUrl": "https://git-scm.com/docs/git-pull"
        },
        {
          "name": "force",
          "viewName": "Force Fetch",
          "type": "boolean",
          "default": false,
          "description": "-f  When git is used with <src>:<dst> refspec it may refuse to update the local branch. This overrides that check.",
          "learnUrl": "https://git-scm.com/docs/git-pull"
        },
        {
          "name": "commitMerge",
          "viewName": "Commit Merge",
          "type": "boolean",
          "default": true,
          "description": "--commit, perform a commit if the merge succeeds (default git behavior)",
          "learnUrl": "https://git-scm.com/docs/git-pull"
        },
        {
          "name": "extraArgs",
          "viewName": "Additional Arguments",
          "type": "text",
          "required": false,
          "description": "Any additional arguments you wish to pass to /usr/bin/git.",
          "learnUrl": "https://git-scm.com/docs/git-pull",
          "placeholder": "--dry-run --tags"
        }
      ]
    },
    {
      "name": "pushTag",
      "viewName": "Push Tag",
      "params": [
        {
          "name": "sshKey",
          "viewName": "SSH Key",
          "type": "vault",
          "required": false,
          "description": "SSH key to use for authentication, if not username and password",
          "learnUrl": "https://git-scm.com/book/en/v2/Git-on-the-Server-Generating-Your-SSH-Public-Key"
        },
        {
          "name": "path",
          "viewName": "Repository Path",
          "type": "string",
          "required": true,
          "description": "Path of the existing git repository to \"git tag\"",
          "placeholder": "/home/username/path/",
          "learnUrl": "https://git-scm.com/docs/git-tag"
        },
        {
          "name": "username",
          "viewName": "Username",
          "type": "string",
          "required": true,
          "description": "Username - equivalent to git config user.name",
          "placeholder": "myusername",
          "learnUrl": "https://git-scm.com/docs/git-tag"
        },
        {
          "name": "email",
          "viewName": "Email",
          "type": "string",
          "required": true,
          "description": "Email - equivalent to git config user.email",
          "placeholder": "my@email.com",
          "learnUrl": "https://git-scm.com/docs/git-tag"
        },
        {
          "name": "tagName",
          "viewName": "Tag Name",
          "type": "string",
          "required": true,
          "description": "Tag name - should be of format v1.2.3",
          "learnUrl": "https://git-scm.com/docs/git-tag",
          "placeholder": "v1.0.2135"
        },
        {
          "name": "message",
          "viewName": "Tag Message",
          "type": "string",
          "required": false,
          "description": "Description for tag",
          "placeholder": "20220409 Release v0.1 - Hungry Horse",
          "learnUrl": "https://git-scm.com/docs/git-tag"
        },
        {
          "name": "push",
          "viewName": "Push Tag to Origin",
          "type": "boolean",
          "default": true,
          "description": "Push the tag to the remote repository.",
          "learnUrl": "https://git-scm.com/book/en/v2/Git-Basics-Tagging"
        }
      ]
    },
    {
      "name": "addCommit",
      "viewName": "Add Commit And Push",
      "params": [
        {
          "name": "sshKey",
          "viewName": "SSH Key",
          "type": "vault",
          "required": false,
          "description": "SSH key to use for authentication, if not username and password",
          "learnUrl": "https://git-scm.com/book/en/v2/Git-on-the-Server-Generating-Your-SSH-Public-Key"
        },
        {
          "name": "path",
          "viewName": "Repository Path",
          "type": "string",
          "required": true,
          "description": "Path of the existing git repository in which to \"git commit\"",
          "placeholder": "myrepo_develop",
          "learnUrl": "https://git-scm.com/docs/git-commit"
        },
        {
          "name": "username",
          "viewName": "Username",
          "type": "string",
          "required": true,
          "description": "Username - equivalent to git config user.name",
          "placeholder": "myusername",
          "learnUrl": "https://git-scm.com/docs/git-commit"
        },
        {
          "name": "email",
          "viewName": "Email",
          "type": "string",
          "required": true,
          "description": "Email - equivalent to git config user.email",
          "placeholder": "my@email.com",
          "learnUrl": "https://git-scm.com/docs/git-commit"
        },
        {
          "name": "commitMessage",
          "viewName": "Commit Message",
          "type": "string",
          "required": true,
          "description": "The message for the commit",
          "placeholder": "This_is_version_5",
          "learnUrl": "https://git-scm.com/docs/git-commit"
        },
        {
          "name": "override",
          "viewName": "Override Add Argumants",
          "type": "text",
          "parserType": "array",
          "required": false,
          "description": "Add arguments to the commit command.",
          "placeholder": "-a\n--interactive\n--patch",
          "learnUrl": "https://git-scm.com/docs/git-commit"
        },
        {
          "name": "push",
          "viewName": "Push Commit to Origin",
          "type": "boolean",
          "default": true,
          "description": "Push the local commit to the remote repository.",
          "learnUrl": "https://git-scm.com/docs/git-push"
        }
      ]
    },
    {
      "name": "remove",
      "viewName": "Remove Repository",
      "params": [
        {
          "name": "path",
          "viewName": "Repository Path",
          "type": "string",
          "required": true,
          "description": "Path of the directory to delete.",
          "placeholder": "myrepo_test",
          "learnUrl": "https://nodejs.org/api/fs.html#fsrmdirsyncpath-options"
        }
      ]
    }
  ]
}
